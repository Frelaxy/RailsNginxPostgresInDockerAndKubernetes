<div class="container">
  <h2 class="title-lg">Новый вопрос</h2>

  <%= form_with model: @question do |form| %>
    <p class="mt"><%= form.label :body, 'Текст вопроса' %></p>
    <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>
    <p class="mt"><%= form.label :answer_id, 'Answer ID' %></p>
    <p><%= form.text_field :answer_id%></p>
    <p class="mt"><%= form.submit 'Создать', class: 'button button-main' %></p>
  <%end%>
</div>